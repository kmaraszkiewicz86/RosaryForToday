<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RosaryForToday.Presentation.Views.RosaryListView"
             Title="Rosary List">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Odśwież" Order="Primary" Priority="0"
                     Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontAttributes="Bold"
                   Margin="12,8,12,0">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="{x:Null}">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" Padding="10" CornerRadius="6" BorderColor="#555" BackgroundColor="#444">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding RosaryTypeName}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding DayOfWeek}" FontSize="14" TextColor="Gray" />

                                <Label Text="Mysteries:" FontAttributes="Bold" Margin="0,6,0,0" />
                                <CollectionView ItemsSource="{Binding RosaryReflections}" ItemsLayout="VerticalList" HeightRequest="140">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Label Text="•" Grid.Column="0" VerticalOptions="Center" />
                                                <VerticalStackLayout Grid.Column="1">
                                                    <Label Text="{Binding Title}" />
                                                    <Label Text="{Binding Content}" FontAttributes="Italic" FontSize="12" TextColor="Gray" />
                                                </VerticalStackLayout>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>